{
  "buildCommand": "npm run vercel-build",
  "installCommand": "npm ci",
  "crons": [
    {
      "path": "/api/wa/jobs/expire-sessions",
      "schedule": "*/2 * * * *"
    },
    {
      "path": "/api/wa/jobs/daily-supply-report",
      "schedule": "0 16 * * *"
    },
    {
      "path": "/api/wa/jobs/attendant-closing-reminder",
      "schedule": "0 15 * * *"
    },
    {
      "path": "/api/wa/jobs/supervisor-review-reminder",
      "schedule": "0 16 * * *"
    },
    {
      "path": "/api/wa/jobs/supplier-opening-reminder",
      "schedule": "30 0 * * *"
    },
    {
      "path": "/api/wa/jobs/ops-role-notice-morning",
      "schedule": "0 5 * * *"
    },
    {
      "path": "/api/wa/jobs/ops-role-notice-evening",
      "schedule": "30 18 * * *"
    },
    {
      "path": "/api/wa/jobs/supervisor-commission-daily",
      "schedule": "35 18 * * *"
    }
    ,
    {
      "path": "/api/wa/jobs/nightly-compute",
      "schedule": "0 20 * * *"
    }
  ],
  "routes": [
    { "src": "/api/whatsapp/webhook", "dest": "/api/wa/webhook" }
  ]
}
