  "scripts": {
    "dev": "next dev -p 3000",
    "dev:3002": "next dev -p 3002",
    "dev:3003": "next dev -p 3003",
    "build": "node scripts/prebuild.mjs && next build",
    "vercel-build": "node scripts/prebuild.mjs && next build",
    "start": "next start",
    "lint": "next lint",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test": "vitest run -c vitest.config.ts",
    "test:unit": "vitest run -c vitest.config.ts",
