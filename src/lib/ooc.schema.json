{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://barakaops/schema/ooc.json",
  "type": "object",
  "required": ["intent"],
  "additionalProperties": false,
  "properties": {
    "intent": {
      "type": "string",
      "enum": [
        "ATT_TAB_STOCK","ATT_STOCK_CLOSING","ATT_STOCK_WASTE",
        "ATT_TAB_SUPPLY","ATT_SUPPLY_ADD","ATT_SUPPLY_DISPUTE",
        "ATT_TAB_DEPOSITS","ATT_DEPOSIT",
        "ATT_TAB_EXPENSES","ATT_EXPENSE_ADD",
        "ATT_TAB_TILL","ATT_TILL_PAYMENT",
        "ATT_TAB_SUMMARY",
        "SUP_TAB_SUPPLY_TODAY","SUP_SUPPLY_ADD","SUP_SUPPLY_CONFIRM",
        "SUP_TAB_VIEW","SUP_TAB_DISPUTE","SUP_DISPUTE_ADD",
        "SV_TAB_REVIEW_QUEUE","SV_REVIEW_ITEM",
        "SV_TAB_SUMMARIES","SV_SUMMARY_REQUEST",
        "SV_TAB_UNLOCK","SV_UNLOCK_DAY",
        "LOCK_DAY","LOGIN","MENU","HELP","FREE_TEXT"
      ]
    },
    "args": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "product": { "type": "string", "minLength": 1 },
        "quantityKg": { "type": "number", "exclusiveMinimum": 0 },
        "wasteKg": { "type": "number", "exclusiveMinimum": 0 },
        "reason": { "type": "string" },
        "mpesaText": { "type": "string", "minLength": 1 },
        "code": { "type": "string", "minLength": 8 },
        "amount": { "type": "number", "exclusiveMinimum": 0 },
        "category": { "type": "string", "minLength": 1 },
        "note": { "type": "string" },
        "customer": { "type": "string" },
        "receipt": { "type": "string" },
        "deliveryId": { "type": "string" },
        "poRef": { "type": "string" },
        "itemId": { "type": "string" },
        "kind": { "type": "string", "enum": ["closing","deposit","expense","supply"] },
        "approve": { "type": "boolean" },
        "date": { "type": "string" },
        "outletId": { "type": "string" },
        "confirm": { "type": "boolean" },
        "viewOnly": { "type": "boolean" },
        "allClosed": { "type": "boolean" },
        "mode": { "type": "string", "enum": ["carryover_only","carryover_plus_today"] },
        "openingPreview": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["product","opening"],
            "properties": {
              "product": { "type": "string" },
              "yesterdayClosing": { "type": "number" },
              "todaySupply": { "type": "number" },
              "opening": { "type": "number" }
            },
            "additionalProperties": true
          }
        }
      }
    },
    "buttons": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": [
          "ATT_TAB_STOCK","ATT_TAB_SUPPLY","ATT_TAB_DEPOSITS",
          "ATT_TAB_EXPENSES","ATT_TAB_TILL","ATT_TAB_SUMMARY",
          "LOCK_DAY","LOCK_DAY_CONFIRM","MENU","HELP","LOGIN",
          "SUP_TAB_SUPPLY_TODAY","SUP_TAB_VIEW","SUP_TAB_DISPUTE","SUP_TAB_HELP",
          "SV_TAB_REVIEW_QUEUE","SV_TAB_SUMMARIES","SV_TAB_UNLOCK","SV_TAB_HELP"
        ]
      },
      "minItems": 1
    },
    "next_state_hint": {
      "type": "string",
      "enum": ["STOCK","SUPPLY","DEPOSITS","EXPENSES","TILL","SUMMARY","REVIEW","UNLOCK","LOCK_CONFIRM","MENU"]
    }
  }
}
